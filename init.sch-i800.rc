import init.p1-common.rc
import usb.rc

on post-fs

# samsung module
    insmod /system/lib/modules/storage.ko

on boot

    setprop ro.build.product p1c
    setprop ro.product.device p1c

    # set BT MAC
    setprop ro.bt.bdaddr_path /data/bdaddr

service pppd_cdma /system/bin/pppd_runner
   class main
   user root
   group radio cache inet misc system
   disabled
   oneshot

service gps-daemon /system/vendor/bin/gpsd
    class late_start
    user system
    group system inet

service bdaddr /system/bin/bdaddr_read
    class main
    user root
    disabled
    oneshot

on property:ril.cdma.data_state=1
    start pppd_cdma
    setprop ril.cdma.data_state 2

on property:ril.cdma.data_state=0
    stop pppd_cdma

on property:sys.boot_completed=1
    start bdaddr
